# TJM Automation Bot - Environment Configuration
# Copy this file to .env and modify as needed

# API Configuration
API_URL=https://jsonplaceholder.typicode.com/posts
API_TIMEOUT=30
NUM_POSTS=10

# Automation Settings
PYAUTOGUI_PAUSE=0.5
TYPING_INTERVAL=0.01
WINDOW_WAIT_TIME=2
SAVE_DIALOG_WAIT=1

# File and Directory Settings
OUTPUT_DIR_NAME=tjm-project
FILE_PREFIX=post
FILE_EXTENSION=txt

# File Handling Options
FILE_CONFLICT_ACTION=overwrite
# Options: overwrite, skip, rename
# overwrite = Replace existing files
# skip = Skip existing files
# rename = Add number suffix (post 1 (1).txt)

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=tjm_automation.log
ENABLE_CONSOLE_LOGGING=true

# Safety Settings
ENABLE_FAILSAFE=true
EMERGENCY_STOP_POSITION=0,0

# Development Settings
DEBUG_MODE=false
DRY_RUN=false
